# Production Environment
APP_ENV=prod
DEBUG=false
LOG_LEVEL=WARNING

# PostgreSQL Database
DB_DRIVER=postgresql
DB_HOST=postgres-prod
DB_PORT=5432
DB_NAME={{ cookiecutter.project_slug }}
DB_USER={{ cookiecutter.project_slug }}_prod_user
DB_PASSWORD=change_me_in_production

# JWT Configuration
# IMPORTANT: Override the default JWT secret used in settings.
# Use a long, random, high-entropy value (e.g. generated by a password manager).
JWT_SECRET_KEY=replace-with-strong-random-secret

# The signing algorithm for JWT tokens, typically HS256.
JWT_ALGORITHM=HS256

# Access token expiration in minutes (e.g. 15 for 15 minutes).
ACCESS_TOKEN_EXPIRE_MINUTES=15

# Refresh token expiration in days (e.g. 7 for one week).
REFRESH_TOKEN_EXPIRE_DAYS=7
